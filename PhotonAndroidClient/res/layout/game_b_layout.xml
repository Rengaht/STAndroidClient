<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
 	
	
	<ImageView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:src="@drawable/gameb_background"
	    />
	
    
	<com.rengatartgital.photonandroidclient.WheelView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	/>
	
	<ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/gameb_wait"
	    android:visibility="invisible"
	/>
	
	
	
	<ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/gameb_start"
	    android:visibility="invisible"
	/>
		
	<ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/gameb_win"
	    android:visibility="invisible"
	 />
	<ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/gameb_lose"
	    android:visibility="invisible"
	 />
	
	
	<com.rengatartgital.photonandroidclient.FinishImageView
    android:id="@+id/finish_img"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="invisible"
    />

	<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/gamec_home"
    android:visibility="invisible"
    />
	
	
</merge>
